<h1>This is the edit page</h1>

<div class="row">
  <div class="col s6">
    <form class="" action="/recipes/<%= @recipe.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <h3>Recipe</h3>
      <label for="name">Name of Recipe:
        <input type="text" name="name" value="<%= @recipe.name() %>">
      </label>
      <h3>Instructions</h3>
      <label for="instructions">Instructions:
        <textarea rows="8" cols="40" name="instructions" value="<%= @recipe.instructions() %>"></textarea>
      </label>
      <label for="rating">Rating(1-5):
        <input type="number" name="rating" value="<%= @recipe.rating() %>">
      </label>
      <label for="image">Image(link):
        <input type="text" name="image" value="<%= @recipe.image() %>">
      </label>
      <button type="submit" name="button">Submit</button>
    </form>
  </div>
  <div class="col s6">
    <ul>
      <% @recipe.ingredients.each() do |ingredient| %>
        <li><%= ingredient.name() %></li>
        <li><%= ingredient.amount() %></li>
        <li><%= ingredient.unit() %></li>
      <% end %>
    </ul>
    <form class="" action="/ingredients/create" method="post">
      <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">
      <h3>Add Ingredients</h3>
      <label for="ingredient_name">Ingredient:
        <input type="text" name="ingredient_name">
      </label>
      <label for="amount">Amount:
        <input type="number" name="amount">
      </label>
      <label for="unit">Unit:
        <input type="text" name="unit">
      </label>
      <button type="submit" name="button">Add Ingredient</button>
    </form>
  </div>
</div>
