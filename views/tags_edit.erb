<div class="form_wrappers">
  <h3 class="thin center">Categories</h3>
  <ul>
    <% if @recipe.tags.any?() %>
      <% @recipe.tags.each() do |tag| %>
        <form class="" action="/recipes/<%=@recipe.id()%>/tags/<%=tag.id()%>" method="post">
          <input type="hidden" name="_method" value="patch">
          <input type="hidden" name="recipe_id" value="<%= @recipe.id()%>">
          <li class="tags_list_form"><%= tag.name() %>
              <button class="delete-button trashcan" type="submit" name="button"><i class="material-icons">delete</i></button>
         </li>
        </form>
      <br>


      <% end %>
    <% else %>
      <li class="prompt">Please add a category.</li>
    <% end %>
  </ul>
  <br>
  <h3 class="thin center">Add Categories</h3>
  <div class="tag-wrapper-2 center">
    <% @unused_tags.each() do |unused_tag| %>
      <form class="center tag-add" id="tag_form" action="/tags/create" method="post">
        <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">
        <input type="hidden" name="tag_name" value="<%=unused_tag.name%>">
        <button class="add_tag" type="submit" name="button"><%= unused_tag.name() %></button>
      </form>
    <% end %>
  </div>
  <form class="" action="/tags/create" method="post">
    <input type="hidden" name="recipe_id" value="<%= @recipe.id() %>">
    <div class="row">
      <div class="input-field col s12">
        <input type="text" name="tag_name">
        <label for="tag_name">Other:</label>
      </div>
    </div>
    <div class="center">
      <button id="tag_submit" class="submit" onclick="submitTags()" type="submit" name="button">Add Category</button>
    </div>
  </form>
  </div>
</div>
